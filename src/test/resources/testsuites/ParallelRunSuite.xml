<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="OnlineShop Tests" thread-count="2" parallel="classes">
    <test name="Sign In Tests">
        <classes>
            <class name="tests.SignInWithInvalidDataTest"></class>
            <class name="tests.SignInWithValidDataTest"></class>
        </classes>
    </test>

    <test name="Actions with the item Tests">
        <classes>
            <class name="tests.AddItemToTheShoppingCartTest"></class>
            <class name="tests.DeleteItemFromTheShoppingCartTest"></class>
            <class name="tests.CompareThePriceOfItemAndThePriceInShoppingCartTest"></class>
            <class name="tests.ConfirmAnOderTest"></class>
        </classes>
    </test>

    <test name="Search for the items Tests">
        <classes>
            <class name="tests.SearchItemByNameTest"></class>
            <class name="tests.SearchItemByCriteriaTest"></class>
        </classes>
    </test>

    <test name="Account Tests">
        <classes>
            <class name="tests.AddAddressTest"></class>
            <class name="tests.SendMessageTest"></class>
        </classes>
    </test>

</suite>
